// This Jenkinsfile is illustrative and demonstrates the stages of a CI/CD pipeline.

pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                // Checkout code-> pulls code from github
            }
        }
        stage('Build Docker Images') {
            steps {
                //Build Docker Images-> builds frontend and backend images
            }
        }
        }
        stage('Deploy Application') {
            steps {
                //Deploy Application-> starts containers using Docker Compose
            }
        }
    }
    post {
        success {
        }
            echo 'CI/CD pipeline completed successfully'
        failure {
            echo 'CI/CD pipeline failed'
        }
    }
}